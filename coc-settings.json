{
    "workspace.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json",
        ".catkin_workspace",
        "build",
        "devel",
        "compile_commands.json"
    ],
    "clangd": {
        "path": "clangd-20",
        "compilationDatabaseCandidates": ["${workspaceFolder}/", "${workspaceFolder}/build/", "${workspaceFolder}/build/Debug/", "${workspaceFolder}/build/Release/"],
        "arguments": [
            "--background-index",
            "--clang-tidy",
            "--completion-style=detailed",
            "--inlay-hints=true"
        ]
    },
    "cmake": {
        "formatter": "/home/chilly/.local/bin/cmake-format"
    },
    "inlayHint.enable": true,
    "inlayHint.display": true,
    "inlayHint.enableParameter": true,
    "inlayHint.refreshOnInsertMode": true,
    "snippets.ultisnips.pythonPrompt": false
}
